<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 记住密码复选框 -->
    <style name="My_CheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#ffffff</item>
        <item name="colorControlActivated">#ffffff</item>
    </style>

    <!--pop动画 -->
    <style name="pop_animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_donghua</item>
        <item name="android:windowExitAnimation">@anim/pop_donghuatui</item>
    </style>

    <!--  TabLayout设置导航字体大小-->
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <!--Activity透明窗口-->
    <style name="myTransparent">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <!--Activity弹框-->
    <style name="Theme.FloatActivity" parent="Theme.AppCompat.Dialog.Alert">
        <!-- float_box为我们定义的窗口背景 ，这个不是必须的-->
        <item name="android:windowBackground">@drawable/float_box</item>

    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">100dp</item>
    </style>

</resources>
