<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@mipmap/tab_beijing"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/tab_one_image"
            android:layout_width="@dimen/dp_103"
            android:layout_height="143dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="-20dp"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:roundedCornerRadius="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tab_one_name"
                android:textColor="#fffefe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_marginTop="@dimen/dp_36"
                android:text="444445" />

            <ImageView
                android:id="@+id/tab_one_guanzhu"
                android:layout_width="@dimen/dp_24"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/dp_100"
                android:layout_marginTop="@dimen/dp_36"
                android:layout_alignParentRight="true"
                />
        </LinearLayout>

            <TextView
                android:textColor="#fffefe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-250dp"
                android:layout_marginTop="@dimen/dp_70"
                android:text="简介:" />

            <TextView
                android:id="@+id/tab_one_jianjie"
                android:textColor="#fffefe"
                android:layout_width="237dp"
                android:layout_height="180dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/dp_70"
                android:text="5555" />

    </LinearLayout>

</RelativeLayout>
